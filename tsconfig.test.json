{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "noEmit": true,
    "types": ["jest", "node"],         // makes describe/it/expect typed
    "esModuleInterop": true,
    "skipLibCheck": true               // often reduces noise in node projects
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}